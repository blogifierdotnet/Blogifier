@layout AccountLayout
@page "/admin/register"
@inject HttpClient Http
@inject NavigationManager _navigationManager
@inject IStringLocalizer<Resource> _localizer
<PageTitle Title="@_localizer["register"]" />
<!--
    TODO: work on the headers.
    <div class="app-account-header">
        <h1>@_localizer["register"]</h1>
    </div>
-->
@if (showError)
{
    <div class="account-message -error">@_localizer["register-failed"].</div>
}

@if (model != null)
{
    <EditForm Model="@model" OnValidSubmit="RegisterUser">
        <DataAnnotationsValidator />
        <div class="form-item">
            <label class="form-label">@_localizer["email"]</label>
            <input class="form-control" type="email" @bind="model.Email" autofocus>
            <ValidationMessage For="@(() => model.Email)"></ValidationMessage>
        </div>
        <div class="form-item">
            <label class="form-label">@_localizer["name"]</label>
            <input class="form-control" type="text" @bind="model.Name">
            <ValidationMessage For="@(() => model.Name)"></ValidationMessage>
        </div>
        <div class="form-item">
            <label class="form-label">@_localizer["password"]</label>
            <input class="form-control" type="password" @bind="model.Password">
            <ValidationMessage For="@(() => model.Password)"></ValidationMessage>
        </div>
        <div class="form-item">
            <label class="form-label">@_localizer["confirm-password"]</label>
            <input class="form-control" type="password" @bind="model.PasswordConfirm">
            <ValidationMessage For="@(() => model.PasswordConfirm)"></ValidationMessage>
        </div>
        <div class="form-item">
            <button type="submit" class="btn btn-blogifier btn-block">@_localizer["register"]</button>
        </div>
    </EditForm>
}

<div class="account-footer">
    <ul class="account-footer-list">
        <li class="item">
            <a class="item-link" href="/admin/login">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                </svg>
                <span>@_localizer["login"]</span>
            </a>
        </li>
        <li class="item">
            <a class="item-link" href="/">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                </svg>
                <span>@_localizer["back-to"] Blog Name</span>
            </a>
        </li>
    </ul>
</div>
