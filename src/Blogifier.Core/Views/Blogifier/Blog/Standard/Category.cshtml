@using Blogifier.Core.Common
@using Blogifier.Core.Data.Models
@model BlogCategoryModel
@{
    var avatar = Model.Profile.Avatar == null ? ApplicationSettings.ProfileAvatar : Model.Profile.Avatar;
    Model.Pager.RouteValue = Model.Profile.Slug + "/" + Model.Category.Slug + "/";
}
<main class="page-category">
    <header class="page-cover" style="background-image: url('@Model.CoverImg')">
        <div class="container">
            <h2 class="page-cover-title">@Model.Category.Title</h2>
            <p class="page-cover-desc">Category</p>
        </div>
    </header>
    @Html.Partial("~/Views/Blogifier/Blog/Standard/_Shared/_Post.cshtml", Model.Posts)
    @Html.Partial("~/Views/Blogifier/Blog/Standard/_Shared/_Pager.cshtml", Model.Pager)
</main>