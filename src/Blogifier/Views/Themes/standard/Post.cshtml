@using Blogifier.Shared.Resources
@using Blogifier.Shared
@* @using Blogifier.Views.Shared *@
@using Blogifier.Pages
@using Microsoft.Extensions.Localization
@using System.Collections.Generic
@using Microsoft.AspNetCore.Authentication

@inject IStringLocalizer<Resource> _localizer

@{
    Layout = "layouts/_main.cshtml";
    PostModel postModel = (PostModel)Model;
    var post = postModel.Post;
    string cover = postModel.Post.Cover;
    var catUrl = Url.Content("~/categories");
    var currentPath = this.Context.Request.Path.ToString().Split("/");
    var currentSlug = currentPath[currentPath.Count() - 1];
    var currentPostId = post.Id;
    string Toolbar = "miniToolbar";
    string Temp = "";
    var token = await Url.ActionContext.HttpContext.GetTokenAsync("access_token");
}

<main class="post-detail">
    <article class="post">

        <figure class="post-cover">
            <img class="post-cover-img" src="~/@cover" alt="@post.Title" aria-hidden="true">
        </figure>

        <header class="post-header post-container">

            <h1 class="post-title">@post.Title</h1>

            <div class="post-meta d-flex align-items-center">
                <div class="post-meta-item post-meta-author">
                    <img class="post-meta-author-img d-none d-md-block" width="32" height="32" src="@post.Author.Avatar"
                        alt="@post.Author.DisplayName" aria-hidden="true" />
                    <div class="post-meta-author-details">
                        <span class="post-meta-label">@_localizer["author"]</span>
                        <a class="post-meta-author-name" href="#">@post.Author.DisplayName</a>
                    </div>
                </div>
                <div class="post-meta-item post-meta-date">
                    <span class="post-meta-label">@_localizer["published"]</span>
                    <time class="post-meta-date-time">@post.Published.ToFriendlyShortDateString()</time>
                </div>
                @if (post.Categories != null && post.Categories.Count > 0)
                {
                    <div class="post-meta-item post-meta-cats">
                        <span class="post-meta-label">@_localizer["categories"]</span>
                        <ul class="post-meta-cats-list d-flex">
                            @foreach (var cat in post.Categories)
                            {
                                <li class="post-meta-cats-item">
                                    <a class="post-meta-cats-link" href="@catUrl/@cat.Content">@cat.Content</a>
                                </li>
                            }
                        </ul>
                    </div>
                }
                <button class="post-meta-btn ms-auto" type="button" data-bs-toggle="modal" data-bs-target="#shareModal"
                    aria-label="@_localizer["share"]">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-share" viewBox="0 0 16 16">
                        <path
                            d="M13.5 1a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zM11 2.5a2.5 2.5 0 1 1 .603 1.628l-6.718 3.12a2.499 2.499 0 0 1 0 1.504l6.718 3.12a2.5 2.5 0 1 1-.488.876l-6.718-3.12a2.5 2.5 0 1 1 0-3.256l6.718-3.12A2.5 2.5 0 0 1 11 2.5zm-8.5 4a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zm11 5.5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3z" />
                    </svg>
                </button>
                @if (User.Identity.IsAuthenticated && User.HasClaim("role", "AutoBloger"))
                {
                    <a class="post-meta-btn ms-2" href="~/admin/editor/@post.Slug" role="button"
                    aria-label="@_localizer["edit-post"]">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-pencil" viewBox="0 0 16 16">
                            <path
                            d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5L13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175l-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                        </svg>
                    </a>
                }
            </div>
        </header>

        <section class="post-content post-container">
            @Html.Raw(post.Content)
            <p></p>
        </section>

        <footer class="post-footer post-container">
            <!--
                TODO:
                Custom fields:
                - post author on or off (default)
                - post comments on or off (default)
            -->

            <partial name="post/author.cshtml" />
            @* <component type="typeof(App)" render-mode="ServerPrerendered" /> *@



            @if (User.Identity.IsAuthenticated)
            {
                <component type="typeof(CommentEditor)" render-mode="ServerPrerendered" class="visually-hidden"
                param-PostSlug="@currentSlug" param-Toolbar="@Toolbar" param-Content="@Temp"
                param-PostId="@currentPostId" param-Token="@token" />
            }

            else
            {
                <p>CLICK TO LOGIN</p>
            }
            @* <form method="post" asp-controller="Comment" asp-action="Add"
                enctype="application/x-www-form-urlencoded"> *@
            <form method="post" action="api/comment/add" enctype="multipart/form-data">

                <div class="form-group">
                    <div>
                        <label for="commentContent">CommentContent</label>
                    </div>
                    <div>
                        <input class="form-control" id="hidden-text" name="commentContent" />
                    </div>
                    @* <input class="form-control" id="hidden-text" hidden="true" name="currentpath" /> *@
                </div>
                @* <button type="button" class="btn" value="Submit" type="submit"
                    role="button">@_localizer["comment"]</button> *@
                <input type="submit" value="Submit" />
            </form>

            <component type="typeof(Comments)" render-mode="ServerPrerendered" class="visually-hidden"
                param-PostSlug="@currentSlug" />
            </cust>
        </footer>

    </article>

    <div class="container">
        <!--
            TODO:
            Custom fields:
            - post nav on or off (default)
            - post related on (default) or off
            - post share on (default) or off
        -->
        <partial name="post/nav.cshtml" />
        <partial name="post/related.cshtml" />
        <partial name="post/share.cshtml" />
    </div>

</main>
