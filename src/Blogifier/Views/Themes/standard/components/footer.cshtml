@using Blogifier.Shared.Resources
@using Blogifier.Shared
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> _localizer


<div class="modal fade search-modal" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
  <div class="modal-dialog mt-5">
    <div class="modal-content">
        <form id="searchForm" class="search-form" role="search" asp-controller="Home" asp-action="Search" method="post">
            <input type="search" id="searchFormInput" name="term" class="form-control form-control-lg" placeholder="Search..." autocomplete="off" autofocus>
        </form>
    </div>
  </div>
</div>

<footer class="container">
    <partial name="../components/newsletter.cshtml" />
    <section class="footer d-flex">
        <p>&copy; @DateTime.Now.Year - Site Title</p>
        <p class="ms-auto">
            Powered by <a href="https://blogifier.net" rel="nofollow" target="_blank" title="Blogifier v3.0 - An open-source publishing platform.">Blogifier</a>
        </p>
    </section>
</footer>
