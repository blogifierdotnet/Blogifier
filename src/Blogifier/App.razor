@using Blogifier.Pages.Admin.Shared
@using Blogifier.Components
@inject IJsonStringLocalizer<App> Localizer

<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <CascadingAuthenticationState>
            <AuthorizeView>
                <Authorized>
                    <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
                </Authorized>
                <NotAuthorized>
                    <RedirectToLogin />
                </NotAuthorized>
            </AuthorizeView>
        </CascadingAuthenticationState>
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(Blogifier.Pages.ErrorLayout)">
            @Localizer["error-msg"]
        </LayoutView>
    </NotFound>
</Router>
