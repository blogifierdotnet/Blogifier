@using Blogifier.Core.Common
@{
    Layout = $"~/{ApplicationSettings.BlogAdminFolder}/_Layout/_Layout.cshtml";
}
<div class="bf-header d-flex d-lg-none">Settings / <span></span> <i class="fa fa-chevron-down"></i></div>
<div class="bf-main">
    <div class="bf-sidebar d-lg-block">
        <div class="bf-settings-sidebar">
            <ul class="bf-settings-sidebar-nav">
                <li is-active-route asp-controller="Packages" asp-action="Widgets">
                    <a asp-controller="Packages" asp-action="Widgets">Widgets</a>
                </li>
                <li is-active-route asp-controller="Packages" asp-action="Themes">
                    <a asp-controller="Packages" asp-action="Themes">Themes</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="bf-body">
        @RenderBody()
    </div>
</div>
@section Scripts{
    @RenderSection("Scripts", false)
}
