@using Blogifier.Core.Common
@using Blogifier.Core.Data.Models
@model BlogAuthorModel
@{
    var avatar = Model.Profile.Avatar == null ? ApplicationSettings.ProfileAvatar : Model.Profile.Avatar;
    var cf = Model.CustomFields;
    Model.Pager.RouteValue = Model.Profile.Slug + "/";
}
<header class="page-cover author-info" style="background-image: url('@Model.CoverImg')">
    <div class="container">
        <img class="author-avatar" src="@avatar" width="100" alt="@Model.Profile.Title" />
        <h2 class="page-cover-title">@BlogSettings.Title</h2>
        <p class="page-cover-desc">@BlogSettings.Description</p>
    </div>
</header>
<main class="page-author">
    <div class="page-content">
        <div class="container">
            @Html.Partial($"~/{ApplicationSettings.BlogThemesFolder}/OneSix/_Shared/_Post.cshtml", Model.Posts)
            @Html.Partial($"~/{ApplicationSettings.BlogThemesFolder}/OneSix/_Shared/_Pager.cshtml", Model.Pager)
        </div>
    </div>
</main>