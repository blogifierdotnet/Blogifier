@model Blogifier.Core.Data.Models.AdminPostsModel
@using Blogifier.Core.Extensions
@using Blogifier.Core.Common;
@{
    var pgr = Model.Pager;
    var cntFrom = pgr.CurrentPage == 1 ? 1 : (pgr.CurrentPage - 1) * pgr.ItemsPerPage + 1;
    var cntTo = pgr.CurrentPage * pgr.ItemsPerPage < pgr.Total ? pgr.CurrentPage * pgr.ItemsPerPage : pgr.Total;
    var curPost = 0;
}
<div class="bf bf-posts">
    <div class="bf-sidebar">
        <!-- SIDEBAR HEADER -->
        <div class="bf-sidebar-posts-header">
            <label class="list-select custom-control custom-checkbox">
                <input class="custom-control-input item-checkbox" type="checkbox" name="selectAll">
                <span class="item-control custom-control-indicator"></span>
            </label>
            <label class="list-filter" data-toggle="collapse" href="#sidebarTools" aria-expanded="false" aria-controls="sidebarTools"><i class="fa fa-filter item-control"></i></label>
            <a href="~/admin/editor/0" class="btn btn-light btn-block btn-new">New Post</a>
        </div>
        <!--/SIDEBAR HEADER -->
        <!-- SEARCH & FILTERS -->
        <div class="bf-sidebar-posts-tools collapse" id="sidebarTools">
            <form class="bf-sidebar-posts-search" action="~/admin" method="get">
                <input type="search" name="search" placeholder="Search..." autocomplete="off" />
                <i class="fa fa-search"></i>
            </form>
            <form class="bf-sidebar-posts-filter" id="frmFilter" asp-controller="Admin" asp-action="Index" method="post">
                <div class="posts-filter-category">
                    <button class="btn-unstyled" type="button" data-toggle="collapse" href="#postsFilterCategory" aria-expanded="false" aria-controls="postsFilterCategory">Categories <i class="fa fa-angle-down"></i></button>
                    <div class="collapse" id="postsFilterCategory">
                        @foreach (var cat in Model.CategoryFilter)
                        {
                            var isChecked = cat.Selected ? "checked" : "";
                            <label class="custom-control custom-checkbox"><input type="checkbox" name="category-filter" value="@cat.Value" @isChecked onclick="submitFilter()" class="custom-control-input chk"><span class="custom-control-indicator"></span><span class="custom-control-description">@cat.Text</span></label>
                        }
                    </div>
                </div>
                <div class="posts-filter-status d-flex flex-row">
                    @foreach (var ftr in Model.StatusFilter)
                    {
                        var ftrChecked = ftr.Selected ? "checked" : "";
                        <label><input type="radio" name="status-filter" value="@ftr.Value" @ftrChecked onclick="submitFilter()" class="custom-control-input"><span>@ftr.Text</span></label>
                    }
                </div>
            </form>
        </div>
        <!--/SEARCH & FILTERS -->
        <!-- POST LIST -->
        <div class="btn-group-actions">
            <div class="d-flex">
                <button type="button" class="btn-unstyled" data-toggle="tooltip" onclick="return postsController.removePost()" title="Delete"><i class="fa fa-trash"></i></button>
                <button type="button" class="btn-unstyled" data-toggle="tooltip" onclick="return postsController.publish()" title="Publish"><i class="fa fa-check"></i></button>
                <button type="button" class="btn-unstyled" data-toggle="tooltip" onclick="return postsController.unpublish()" title="Unpublish"><i class="fa fa-archive"></i></button>
            </div>
        </div>
        <ul class="bf-sidebar-posts-list" aria-label="posts">
            @foreach (var item in Model.BlogPosts)
            {
                var published = item.Published == DateTime.MinValue ? "DRAFT" : item.Published.ToString("MMM dd, yyyy");
                if (curPost == 0) { curPost = item.BlogPostId; }
                <li class="item">
                    <label class="item-select custom-control custom-checkbox"><input type="checkbox" id="@item.BlogPostId" class="item-checkbox custom-control-input"><span class="item-control custom-control-indicator"></span></label>
                    <a class="item-link item-link-desktop" href="#" onclick="return postsController.showPost('@item.BlogPostId')">@item.Title</a>
                    <a class="item-link item-link-mobile" href="~/admin/editor/@item.BlogPostId">@item.Title</a>
                    <div class="hide">
                        <a href="/@ApplicationSettings.BlogRoute@item.Slug" data-toggle="tooltip" title="@item.PostViews views" target="_blank" aria-label="View" role="button"><i class="fa fa-eye"></i></a>
                        <a aria-label="Publish date">@published</a>
                    </div>
                </li>
            }
        </ul>
        <!--/POST LIST -->
        <!-- PAGINATION -->
        @if (pgr.ShowNewer || pgr.ShowOlder)
        {
            <ul class="pagination-custom" aria-label="Post navigation">
                @if (pgr.ShowOlder)
                {
                    <li><a href="~/admin/@pgr.Older" aria-label="Older posts"><i class="fa fa-long-arrow-left"></i></a></li>
                }
                <li><a class="item-count">@cntFrom-@cntTo out of @pgr.Total</a></li>
                @if (pgr.ShowNewer)
                {
                    <li><a href="~/admin/@pgr.Newer" aria-label="Newer posts"><i class="fa fa-long-arrow-right"></i></a></li>
                }
            </ul>
        }
        <!--/PAGINATION -->
    </div>
    <div class="bf-content bf-content-posts">
        <!-- PREVIEW POST (This section will change for each post) -->
        <div class="bf-content-post-cover" style="background-image:url(/embedded/lib/img/cover.png);">
            <div class="bf-content-post-cover-body">
                <p id="post-tagline"></p>
                <h1 id="post-title"></h1>
                <div class="btn-group float-left">
                    <button type="button" class="btn btn-outline-secondary" onclick="postsController.editPost()">Edit</button>
                    <button type="button" class="btn btn-outline-secondary" onclick="postsController.showPost()">View</button>
                </div>
                <div class="btn-group btn-group-icon float-left" role="group">
                    <button type="button" class="btn btn-outline-secondary" onclick="postsController.removePost()" title="Delete"><i class="fa fa-trash"></i></button>
                    <button type="button" id="btnPublish" class="btn btn-outline-secondary" onclick="postsController.publish()" title="Publish"><i class="fa fa-check"></i></button>
                    <button type="button" id="btnUnpublish" class="btn btn-outline-secondary" onclick="postsController.unpublish()" title="Unpublish"><i class="fa fa-archive"></i></button>
                </div>
                <button class="btn btn-outline-secondary btn-icon-rounded float-right" data-toggle="modal" data-target="#fileManager" onclick="" title="Change the cover"><i class="fa fa-photo"></i></button>
            </div>
        </div>
        <div class="bf-content-post-text"></div>
        <!--/PREVIEW POST-->
    </div>
</div>
@Html.Partial("~/Views/Blogifier/Admin/Custom/_Shared/_FileManager.cshtml")
@section Scripts{
    <script src="~/blogifier/admin/custom/js/app/postsController.js"></script>
    <script>
        var submitFilter = function () {
            $('#frmFilter').submit();
        }
        postsController.showPost('@curPost');
        $('.bf-sidebar-posts-list a:first').addClass('active');
    </script>
}