@using Blogifier.Core.Common
@using Blogifier.Core.Data.Domain
@using System.Collections.Generic
@using Blogifier.Core.Extensions
@using Blogifier.Core.Data.Models
@model BlogAuthorModel
@{
    var bg = Model.Profile.Image == null ? ApplicationSettings.ProfileImage : Model.Profile.Image;
    var avatar = Model.Profile.Avatar == null ? ApplicationSettings.ProfileAvatar : Model.Profile.Avatar;
    var social = (Dictionary<string, string>)Model.SocialButtons;
}
<main class="page-author">
    <header class="cover" style="background-image: url('@bg')">
        <div class="cover-title container">
            <img src="@avatar" width="100" alt="@Model.Profile.Title" />
            <h2>@Model.Profile.Title</h2>
            <p>My name is Jhon Doe and I am a web developer.</p>
            <ul>
                @if (social.ContainsKey("Google"))
                {
                    <li><a href='@social["Google"]' target="_blank" data-toggle="tooltip" title="Google Plus"><i class="fa fa-google"></i></a></li>
                }
                @if (social.ContainsKey("Twitter"))
                {
                    <li><a href='@social["Twitter"]' target="_blank" data-toggle="tooltip" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                }
                @if (social.ContainsKey("Github"))
                {
                    <li><a href='@social["Github"]' target="_blank" data-toggle="tooltip" title="GitHub"><i class="fa fa-github"></i></a></li>
                }
                @if (social.ContainsKey("Instagram"))
                {
                    <li><a href='@social["Instagram"]' target="_blank" data-toggle="tooltip" title="Instagram"><i class="fa fa-instagram"></i></a></li>
                }
                @if (social.ContainsKey("Facebook"))
                {
                    <li><a href='@social["Facebook"]' target="_blank" data-toggle="tooltip" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                }
            </ul>
        </div>
    </header>

    <div class="blog-content container">
        <section class="row">
            @if (Model != null)
            {
                foreach (var item in Model.Posts)
                {
                    <div class="col-md-6 post">
                        <article class="post-item">
                            <div class="post-item-cover">
                                <img class="post-item-img" src="@item.Image" alt="@item.Title" />
                                <div class="post-item-head">
                                    <p class="post-item-info">By <a href="~/author/@item.BlogSlug">@item.AuthorName</a> &mdash; @item.Published.ToFriendlyDateString()</p>
                                    <h2 class="post-item-title"><a href="~/blog/@item.Slug">@item.Title</a></h2>
                                </div>
                            </div>
                            <div class="post-item-content">
                                <p class="post-item-text dot-resize-update">@Html.Raw(item.Content) </p>
                                <a class="post-item-more" href="~/blog/@item.Slug">Read More...</a>
                            </div>
                        </article>
                    </div>
                }
            }
        </section>
        @if (Model != null)
        {
            <ul class="pagination justify-content-center">
                @if (Model.Pager.ShowOlder)
                {
                    <li class="page-item prev"><a href="~/author/@Model.Profile.Slug/@Model.Pager.Older"><i class="fa fa-angle-left"></i> <span>Older Posts</span></a></li>
                }
                @if (Model.Pager.ShowNewer)
                {
                    <li class="page-item next"><a href="~/author/@Model.Profile.Slug/@Model.Pager.Newer"><span>Newer Posts</span> <i class="fa fa-angle-right"></i></a></li>
                }
            </ul>
        }
    </div>
</main>