@using Blogifier.Core.Common
<header class="blog-header">
    <section class="container clearfix">
        <nav class="blog-nav">
            <button class="dropdown-toggle" type="button" id="blogNav" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-navicon"></i></button>
            <ul class="dropdown-menu" aria-labelledby="blogNav">
                <li><a class="dropdown-item" href="~/blog">Blog</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a class="dropdown-item" href="~/admin">Admin</a></li>
                    <li><a class="dropdown-item" href="#" onclick="profileLogOut(); return false;">Logoff</a></li>
                }
                else
                {
                    <li><a class="dropdown-item" href="~/account/login?ReturnUrl=%2Fadmin">Login</a></li>
                }
                @if (Model.Categories != null && Model.Categories.Count > 0)
                {
                    <li class="dropdown-divider"></li>
                    foreach (var item in Model.Categories)
                    {
                        <li><a class="dropdown-item" href="~/category/@item.Value">@item.Text</a></li>
                    }
                }
            </ul>
        </nav>
        <h1 class="blog-logo"><a href="~/blog"><img src="@ApplicationSettings.ProfileLogo" alt="@ApplicationSettings.Title" /></a></h1>
        <form class="blog-search" role="search" asp-controller="Search" asp-action="Index" method="post">
            <button type="button"><i class="fa fa-search"></i></button>
            <input type="search" id="term" name="term" class="form-control" placeholder="Search...">
        </form>
    </section>
</header>